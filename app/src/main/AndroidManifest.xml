<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.barney.gnbapp">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name=".GNBAppApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.GNBApp">
        <activity android:name=".features.splash.view.SplashActivity"
            android:theme="@style/Theme.GNBApp.NoActionBar"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".features.catalogue.view.ProductsCatalogueActivity"
            android:theme="@style/Theme.GNBApp.NoActionBar"
            android:screenOrientation="portrait"/>
        <activity android:name=".features.transactions.view.ProductTransactionsActivity"
            android:theme="@style/Theme.GNBApp.NoActionBar"
            android:screenOrientation="portrait"/>
    </application>

</manifest>